{
  "name": "dword",
  "version": "4.3.2",
  "description": "Web editor based on CodeMirror",
  "main": "server/index.js",
  "bin": {
    "dword": "bin/dword.js",
    "dword_": "legacy/bin/dword.js"
  },
  "scripts": {
    "start": "bin/dword.js package.json",
    "start:dev": "NODE_ENV=development npm start",
    "lint": "redrun lint:*",
    "lint:bin": "eslint --rule 'no-console:0' bin",
    "lint:client": "eslint --env browser --rule 'no-console:0' client",
    "lint:server": "eslint server",
    "build:client": "webpack --progress",
    "build:client:dev": "NODE_ENV=development npm run build:client",
    "build:codemirror": "cp -r node_modules/codemirror modules/",
    "build:codemirror:buble": "rollup -u CodeMirror -c .rollup.buble.js -m -f umd -o dist/codemirror.js",
    "build:server": "redrun 6to5:*",
    "watch:server": "npm run watch \"npm start\"",
    "watch:client": "npm run watch \"npm run build:client:dev\"",
    "watch": "nodemon -w server -w client -x",
    "6to5:lib": "babel server -d server_",
    "6to5:bin": "babel bin -d legacy/bin",
    "build": "redrun build:codemirror build:client* build:server build:codemirror legacy:*",
    "legacy:index": "echo \"module.exports = require('../server_');\" > legacy/index.js",
    "wisdom": "npm run build"
  },
  "dependencies": {
    "ashify": "^1.0.1",
    "currify": "^2.0.0",
    "express": "^4.14.0",
    "fullstore": "^1.0.0",
    "join-io": "^1.4.0",
    "mollify": "^1.0.4",
    "os-homedir": "^1.0.0",
    "patchfile": "^1.0.1",
    "readjson": "^1.1.0",
    "restafary": "^2.0.0",
    "socket-file": "^1.3.0",
    "socket.io": "^2.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "bower": "^1.5.1",
    "bupdate": "^1.1.0",
    "codemirror": "^5.26.0",
    "cssnano": "^3.7.7",
    "eslint": "^4.0.0",
    "nodemon": "^1.11.0",
    "rollup": "^0.43.0",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-filesize": "^1.0.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-postcss": "^0.5.0",
    "rollup-plugin-uglify": "^2.0.1",
    "webpack": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudcmd/dword"
  },
  "keywords": [
    "editor",
    "express",
    "middleware",
    "monaco",
    "patch",
    "diff",
    "ide",
    "text"
  ],
  "author": "coderaiser",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cloudcmd/dword/issues"
  },
  "homepage": "https://github.com/cloudcmd/dword"
}