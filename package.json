{
  "name": "dword",
  "version": "3.2.14",
  "description": "Web editor based on CodeMirror",
  "main": "lib/server.js",
  "config": {
    "plugins": "-p [ minifyify --map readify.min.js.map --output dist/readify.min.js.map ]",
    "compile": {
      "client": "--gv false -s CodeMirror ./src/index.js -o dist/codemirror.js"
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "bin": {
    "dword": "bin/dword.js"
  },
  "scripts": {
    "build": "rollup -u CodeMirror -c .rollup.js -m -f umd -o dist/codemirror.js",
    "build:buble": "rollup -u CodeMirror -c .rollup.buble.js -m -f umd -o dist/codemirror.js",
    "wisdom": "npm run build:buble",
    "bower": "bower",
    "bupdate": "bupdate"
  },
  "dependencies": {
    "ashify": "~1.0.1",
    "express": "^4.14.0",
    "join-io": "~1.4.0",
    "mollify": "~1.0.4",
    "os-homedir": "~1.0.0",
    "patchfile": "~1.0.1",
    "readjson": "~1.1.0",
    "rendy": "~1.1.0",
    "restafary": "~1.6.0",
    "socket-file": "^1.3.0",
    "socket.io": "^1.5.0",
    "try-catch": "~1.0.0"
  },
  "devDependencies": {
    "babel-preset-es2015-rollup": "^1.2.0",
    "bower": "^1.5.1",
    "bupdate": "^1.1.0",
    "codemirror": "^5.20.0",
    "rollup": "^0.36.3",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-buble": "^0.14.0",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-filesize": "^1.0.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudcmd/dword"
  },
  "keywords": [
    "editor",
    "express",
    "middleware"
  ],
  "author": "coderaiser",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cloudcmd/dword/issues"
  },
  "homepage": "https://github.com/cloudcmd/dword"
}
